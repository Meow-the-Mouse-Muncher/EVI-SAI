    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}", // 自动使用 VSCode 中选择的 Python 解释器
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
            },
            "justMyCode": false // 允许调试非用户代码
        },
        {
            "name": "Python 调试程序: 指定文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/UnsupervisedTrain.py", // 可以替换为您常用的文件
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
            },
            "justMyCode": false
        }
    ]
}